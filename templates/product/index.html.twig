{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>



   
    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>City</th>
                <th>Postal_code</th>
                {# <th>Reservation_text</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products|slice(0, 15) %}
            <tr>
                {# <td>{{ product.id }}</td> #}
                <td>{{ product.title|upper}}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.city }}</td>
                <td>{{ product.postalCode }}</td>
                {# <td>{{ product.reservationText }}</td> #}
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}">consulter un produit</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    

    <a href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
